{
  "manifest_version": 3,
  "name": "LeetCode Timer",
  "version": "1.1.0",
  "description": "Auto-timer for LeetCode with alerts and global shortcuts",
  "permissions": ["storage", "tabs", "scripting", "webNavigation"],
  "host_permissions": ["https://leetcode.com/*", "https://leetcode.cn/*"]
,
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.cn/problems/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "commands": {
    "set-30-start": {
      "description": "Set 30 minutes and start",
      "suggested_key": { "default": "Ctrl+Shift+2" }
    },
    "toggle": {
      "description": "Start/Pause",
      "suggested_key": { "default": "Ctrl+Shift+Y" }
    },
    "reset": {
      "description": "Reset timer",
      "suggested_key": { "default": "Ctrl+Shift+U" }
    },
    "block-comment": {
      "description": "Toggle block comment in editor",
      "suggested_key": {
        "default": "Ctrl+Shift+L"

      }
    }
  }
}
